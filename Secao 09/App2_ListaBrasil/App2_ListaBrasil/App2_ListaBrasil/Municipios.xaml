<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2_ListaBrasil.Municipios">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="30">
            <Entry Placeholder="Pesquisar" TextColor="White"  PlaceholderColor="LimeGreen" x:Name="TxtMunicipio" TextChanged="BuscaRapida"/>
                <ListView x:Name="ListaMunicipios">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell TextColor="LightSkyBlue" Text="{Binding nome}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>