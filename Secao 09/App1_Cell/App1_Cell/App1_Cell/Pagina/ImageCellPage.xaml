<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Cell.Pagina.ImageCellPage">
    <ContentPage.Content>
        <ListView x:Name="ListaDeFuncionarios">
            <ListView.ItemTemplate>
                <DataTemplate>
                <!--Escolher qual tipo de celula queremos
                     Tem as mesmas propriedades do TextCell mas pode adicionar uma imagem
                    -->
                    <ImageCell Text="{Binding Nome}" Detail="{Binding Cargo}" ImageSource="{Binding Foto}"/>


                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>