<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.LoginPage">
    <ContentPage.Content>
        <StackLayout Margin="10,60" Padding="25" Spacing="70">
            <Label Text="Pedidos" FontSize="Large" FontAttributes="Bold"/>

            <StackLayout Spacing="30">
                <Entry x:Name="Login" Placeholder="Login" PlaceholderColor="Gray"/>
                <StackLayout Orientation="Horizontal">
                    <Entry HorizontalOptions="FillAndExpand" x:Name="Senha" Placeholder="Senha" PlaceholderColor="Gray" IsPassword="true"/>
                    <Button HorizontalOptions="End" Text="Ver" Clicked="VerSenha"/>
                </StackLayout>
              </StackLayout>

            <StackLayout>
                <Button BackgroundColor="Black" Text="Logar" TextColor="White" Clicked="Logar"/>
            </StackLayout>

            <StackLayout>
                <ActivityIndicator HorizontalOptions="Fill"  VerticalOptions="Fill" HeightRequest="50" x:Name="Carregando" Color="Green" IsRunning="false" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>