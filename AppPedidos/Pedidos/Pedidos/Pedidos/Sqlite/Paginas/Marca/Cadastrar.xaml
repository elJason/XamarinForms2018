<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.Sqlite.Paginas.Marca.Cadastrar">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Entry x:Name="Nome" Placeholder="Nome" />
                <Entry x:Name="Codigo" Placeholder="Codigo" />

                <StackLayout Orientation="Horizontal">
                    <Label Text="Ativo" />
                    <Switch x:Name="Ativo" />
                </StackLayout>

                <Button Text="Salvar" Clicked="SalvarAction"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>