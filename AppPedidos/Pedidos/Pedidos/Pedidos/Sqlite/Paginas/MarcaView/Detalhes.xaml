<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.Sqlite.Paginas.MarcaView.Detalhes">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nome - " TextColor="LightSalmon" FontSize="20" FontAttributes="Bold"/>
            <Label Text="{Binding Nome}" FontAttributes="Italic" FontSize="24"/>

            <Label Text="Codigo - " TextColor="LightSalmon" FontSize="18" FontAttributes="Bold" />
            <Label Text="{Binding Codigo}" FontSize="22"/>


            <Label Text="Situacao - " TextColor="LightSalmon" FontSize="18" FontAttributes="Bold"/>
            <Label x:Name="Ativo" FontSize="22"/>


            <Label Text="Data Inclusao - " TextColor="LightSalmon" FontSize="18" FontAttributes="Bold"/>
            <Label Text="{Binding DataInclusao}" FontSize="22"/>

            <Label Text="Id Usuario Inclusao - " TextColor="LightSalmon" FontSize="18" FontAttributes="Bold" />
            <Label Text="{Binding IdUsuarioInclusao}" FontSize="22"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>