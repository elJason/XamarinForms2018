<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.SqlServer.View.CadastrarProduto">
    <ContentPage.Content>
        <StackLayout Spacing="40" Padding="10" Margin="10">
            <StackLayout Orientation="Horizontal" HeightRequest="40">
                <Label x:Name="Cabecalho" Text="Cadastrar Produto" FontSize="Large"/>
                <Button Text="X" Clicked="FecharModal" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
            <StackLayout Spacing="30">
                <Entry x:Name="Nome" Text="{Binding nome}" Placeholder="Nome" />
                <Entry x:Name="Codigo" Text="{Binding codigo}" Placeholder="Codigo" Keyboard="Numeric"/>
                <Button x:Name="BtnCadastro" Text="Cadastrar" Clicked="EnviarDados"/>
                <Label x:Name="Mensagem" HorizontalOptions="CenterAndExpand" TextColor="Red"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>