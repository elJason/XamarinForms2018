<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.SqlServer.View.ListaMarcas"
             Title="Marcas">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="plusW.png" Clicked="GoModalCadastrar"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Pesquisar. . . Nome ou Código . . ."  PlaceholderColor="Gray" TextChanged="Buscar"/>
            <ListView x:Name="Lista" ItemTapped="GoDetalhe">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nome}" Detail="{Binding codigo}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>