<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.SqlServer.View.ListaProdutosParaNovoPedido">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="refreshW.png" Clicked="AtualizarAction"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Pesquisar. . ."  PlaceholderColor="Gray" TextChanged="Buscar"/>
            <ListView x:Name="Lista" ItemTapped="GoDetalhe" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nome}" Detail="{Binding codigo}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>