<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.SqlServer.View.CadastrarMarca">
    <ContentPage.Content>
        <StackLayout Spacing="50" Padding="10" Margin="10">
            
            <StackLayout Orientation="Horizontal" HeightRequest="40">
                <Label Text="Cadastrar Marca" FontSize="Large"/>
                <Button Text="X" Clicked="FecharModal" HorizontalOptions="EndAndExpand"/>
            </StackLayout>

            <StackLayout Spacing="50">
                <Entry x:Name="Nome" Text="{Binding nome}" Placeholder="Nome" />
                <Entry x:Name="Codigo" Text="{Binding codigo}" Placeholder="Codigo" />

                <Button x:Name="BtnCadastro" Text="Cadastrar" Clicked="Cadastrar"/>
                
                <Label x:Name="Mensagem" HorizontalOptions="CenterAndExpand" TextColor="Red"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
