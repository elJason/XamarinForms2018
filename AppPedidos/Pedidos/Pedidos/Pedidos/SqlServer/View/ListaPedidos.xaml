<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.SqlServer.View.ListaPedidos"
             Title="Pedidos">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker HeightRequest="50" x:Name="calendario" Format="dd/MM/yy" MinimumDate="01/05/2018" DateSelected="Buscar"/>
            <ListView x:Name="Lista" ItemTapped="GoDetalhe">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding idProduto}" Detail="{Binding quantidade}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>