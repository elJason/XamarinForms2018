<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.SqlServer.Pages.PedidoView">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Pesquise pelo Id do produto" TextChanged="BuscaPedidos" Keyboard="Numeric"/>
            <ListView x:Name="ListaPedidos">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding idProduto}" Detail="{Binding obs}"/>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>