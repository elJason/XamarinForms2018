<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.SqlServer.Pages.MarcaView">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Pesquisar. . ."  TextChanged="BuscaMarca"/> 
            <ListView x:Name="ListaMarcas" ItemSelected="MarcaSelecionada">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nome}" Detail="{Binding codigo}"/>

                    </DataTemplate>    
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>