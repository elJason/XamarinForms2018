<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedidos.Menu.Master">

    <MasterDetailPage.Master>
        <ContentPage Title="Pedidos">
            <StackLayout>
                <StackLayout>
                    <!--ABRINDO A LISTA DE CADA OBJETO-->
                    <Button Text="Pessoas" Clicked="GoListaPessoas"/>
                    <Button Text="Marcas" Clicked="GoListaMarcas"/>
                    <Button Text="Pedidos" Clicked="GoListaPedidos"/>
                </StackLayout>
                <StackLayout VerticalOptions="Center">
                    <!-- Primeiro saber a marca e depois o produto-->
                    <Button Text="Produtos" Clicked="GoListaProdutos"/>
                </StackLayout>
                
                
                
                <StackLayout VerticalOptions="EndAndExpand">
                    <Button Text="Perfil" Clicked="GoPerfil"/>
                    <Label x:Name="Nome"/>
                    <Label x:Name="Tipo"/>
                </StackLayout>
            </StackLayout>
        </ContentPage>
        
    </MasterDetailPage.Master>
    
    <MasterDetailPage.Detail>
        
        
    </MasterDetailPage.Detail>
    
    
</MasterDetailPage>