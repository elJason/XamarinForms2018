<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.PickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker
                Title="Empresas de T.I"
                TextColor="Blue"

                SelectedIndex="2"
                SelectedIndexChanged="ActionMudarIndex"
                >
                <Picker.Items>
                    <x:String>Microsoft</x:String>
                    <x:String>Apple</x:String>
                    <x:String>Oracle</x:String>
                    <x:String>Tesla</x:String>
                    <x:String>SpaceX</x:String>
                </Picker.Items>
            </Picker>
            <Label x:Name="Resultado"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    
