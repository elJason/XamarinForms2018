            <ProgressBar x:Name="bar1" Progress="0.1"/>
            <ProgressBar x:Name="bar2" Progress="0.2"/>
            <ProgressBar x:Name="bar3" Progress="0.3"/>
            <ProgressBar x:Name="bar4" Progress="0.4"/>
            <ProgressBar x:Name="bar5" Progress="0.5"/>
            <ProgressBar x:Name="bar6" Progress="0.6"/>
