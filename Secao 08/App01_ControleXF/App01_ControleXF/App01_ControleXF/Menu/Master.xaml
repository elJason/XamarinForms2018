<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:page="clr-namespace:App01_ControleXF"
                  x:Class="App01_ControleXF.Menu.Master">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <ScrollView>
                <StackLayout>
                    <Button Text="Activiy Indicator" Clicked="GoActivityIndicator"/>
                    <Button Text="Progress Bar" Clicked="GoProgressBar"/>
                    <Button Text="Box View" Clicked="GoBoxView"/>
                    <Button Text="Label" Clicked="GoLabel"/>
                    <Button Text="Button" Clicked="GoButton"/>
                    <Button Text="Entry" Clicked="GoEntryEditor"/>
                    <Button Text="Date Picker" Clicked="GoDatePicker"/>
                    <Button Text="Time Picker" Clicked="GoTimePicker"/>
                    <Button Text="Picker" Clicked="GoPicker"/>
                    <Button Text="Search Bar" Clicked="GoSearchBar"/>
                    <Button Text="Slider / Stepper" Clicked="GoSliderStepper"/>
                    <Button Text="Switch" Clicked="GoSwitch"/>
                    <Button Text="Image" Clicked="GoImage"/>
                    <Button Text="List View" Clicked="GoListView"/>
                    <Button Text="Table View" Clicked="GoTableView"/>
                    <Button Text="Web View" Clicked="GoWebView"/>
                </StackLayout>
            </ScrollView> 
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <page:MainPage />
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>
    
